<Window x:Class="TestKeyHook.View.RecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestKeyHook.View"
        mc:Ignorable="d"
        Title="RecordWindow" Height="300" Width="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.504,0.03" EndPoint="1.504,1.5" >
                <GradientStop Color="#FFFFC934" Offset="1"/>
                <GradientStop Color="#FFFFFFFF" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="Chocolate">This is a Record Window</TextBlock>
            <TextBlock Foreground="OrangeRed"> Please close the Window</TextBlock>
        </StackPanel>
        
    </Grid>
</Window>
